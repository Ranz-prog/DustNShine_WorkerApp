<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceDetails"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/doneWorkButton"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/service_Image"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <ImageView
                android:id="@+id/service_arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowback"
                android:layout_marginTop="2dp"/>

            <RelativeLayout
                android:id="@+id/customerDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_Image"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/service_customerDetailsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibribold"
                    android:text="@string/customer_details"
                    android:textColor="@color/app_theme_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--Customer Name Here-->

                <TextView
                    android:id="@+id/customerNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_customerDetailsLabel"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/quicsandmed"
                    android:text="@string/customer_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/service_customerNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/service_customerDetailsLabel"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/customerNameLabel"
                    android:fontFamily="@font/quicksandreg"
                    android:text="Juan Dela Cruz"
                    android:textSize="14sp" />

                <!--Customer Location-->

                <TextView
                    android:id="@+id/locationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customerNameLabel"
                    android:fontFamily="@font/quicsandmed"
                    android:text="@string/customer_location"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/service_customerLocationTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/service_customerNameTV"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/locationLabel"
                    android:fontFamily="@font/quicksand"
                    android:text="123 St. Brgy. Poblacion, Dagupan, Pangasinan" />

                <!--Contact Number-->

                <TextView
                    android:id="@+id/contactNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/locationLabel"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/quicsandmed"
                    android:text="@string/customer_number"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_customerLocationTV"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/contactNumberLabel"
                    android:fontFamily="@font/quicksandreg"
                    android:text="09661581921" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookingDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/customerDetailsContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/calibribold"
                    android:text="@string/customer_booking"
                    android:textColor="@color/app_theme_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/paymentMethodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookingDetailsContainer"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/calibribold"
                android:text="@string/customer_payment"
                android:textColor="@color/app_theme_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iconCash"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/money"
                android:layout_below="@id/paymentMethodLabel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconCash"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibribold"
                android:text="@string/customer_total"
                android:textColor="@color/app_theme_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/doneWorkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme_blue"
        android:fontFamily="@font/quicksandbold"
        android:text="Work is Done"
        android:textColor="@color/white" />


</RelativeLayout>