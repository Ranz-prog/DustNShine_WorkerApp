<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_blue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logincard" />

    <LinearLayout
        android:id="@+id/upperPartContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/dustnshine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DustNShine"
            android:textColor="@color/app_theme_blue"
            android:textSize="28sp"
            android:textStyle="bold" />
        |

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Sign In"
            android:fontFamily="@font/quicksand_font"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upperPartContainer"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp">

        <EditText
            android:id="@+id/signin_Email_ET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/signin_edit_text_shape"
            android:fontFamily="@font/quicksand_font"
            android:hint="@string/signup_email"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signin_Password_ET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signin_Email_ET"
            android:layout_marginTop="10dp"
            android:background="@drawable/signin_edit_text_shape"
            android:fontFamily="@font/quicksand_font"
            android:hint="@string/signup_password"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/signin_Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signin_Password_ET"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signin_Password_ET"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@id/signin_Checkbox"
            android:fontFamily="@font/quicksand_font"
            android:text="@string/signup_keep_login"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signup_buttonSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signin_Checkbox"
            android:layout_marginTop="16dp"
            android:background="@drawable/signin_button_shape"
            android:backgroundTint="@color/app_theme_gold"
            android:text="@string/signup_button_title"
            android:textColor="@color/white" />



    </RelativeLayout>

</RelativeLayout>