<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/upPart"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/app_theme_blue">


        <TextView
            android:id="@+id/titleTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnLogout"
        android:layout_below="@id/upPart"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/appicon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_container"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/appicon"/>
        </LinearLayout>


        <TextView
            android:id="@+id/profile_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appicon"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/profile_subtitle"
            android:textSize="17sp" />

        <!--Information-->


        <!--First Name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstnameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_subtitle"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/worker_fname_ET"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/input_text_layout"
                android:editable="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/user_firstname"
                android:maxLength="50"
                android:padding="15dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--LastName-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_subtitle"
            android:layout_toRightOf="@id/firstnameLayout"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/worker_lname_ET"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_layout"
                android:editable="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/user_lastname"
                android:maxLength="50"
                android:padding="15dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Email Address-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailAddInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstnameLayout"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/worker_email_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_layout"
                android:editable="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/user_email"
                android:maxLength="50"
                android:padding="15dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Contact Number-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contactInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailAddInputLayout"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/worker_contact_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_layout"
                android:editable="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/user_contact"
                android:maxLength="50"
                android:padding="15dp"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/app_theme_blue"
        android:fontFamily="@font/roboto_regular"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>